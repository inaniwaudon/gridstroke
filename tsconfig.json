{
  "compilerOptions": {
    "target": "es2021",
    "outDir": "./dist/",
    "baseUrl": "./",
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "strictFunctionTypes": false,
    "skipLibCheck": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"]
}
